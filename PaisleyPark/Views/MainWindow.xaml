<Window x:Class="PaisleyPark.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:PaisleyPark"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Icon="../paisleypark.ico"
        Title="{Binding Path=WindowTitle, FallbackValue='Paisley Park'}" 
        Height="169.5" 
        Width="300"
        ResizeMode="NoResize">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <prism:InvokeCommandAction Command="{Binding Path=ClosingCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>

        <ComboBox VerticalAlignment="Top" 
                    ItemsSource="{Binding UserSettings.Presets, UpdateSourceTrigger=PropertyChanged}" 
                    SelectedItem="{Binding CurrentPreset, Mode=OneWayToSource}" Margin="10,10,57,0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name, FallbackValue=???}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button Content="..." VerticalAlignment="Top" Command="{Binding ManagePresetsCommand}" HorizontalAlignment="Right" Width="42" Margin="0,10,10,0" Height="22" />

        <Button Content="Load" Margin="10,37,10,0" VerticalAlignment="Top" Command="{Binding LoadPresetCommand}"/>

        <StackPanel Orientation="Horizontal" Margin="10,62,10,51">
            <Label Content="Delay" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox TextWrapping="Wrap" VerticalAlignment="Center" ToolTip="Delay in milliseconds for each waymark to be placed."
                 Text="{Binding Path=WaymarkDelay}" HorizontalAlignment="Left" Width="113"/>
        </StackPanel>

    </Grid>

</Window>
